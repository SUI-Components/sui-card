{
  "name": "@schibstedspain/sui-card",
  "version": "1.2.0",
  "main": "dist/",
  "scripts": {
    "clean:dist": "rimraf ./dist/*",
    "clean:tmp": "rimraf .tmp/",

    "prebuild": "npm run clean:dist -s",
    "build": "npm run build:scripts && npm run build:styles",
    "build:scripts": "babel src --out-dir dist",
    "build:styles": "node-sass src/index.scss dist/sui-card.css",
    "postbuild:styles": "cp dist/sui-card.css dist/_sui-card.scss",
    "postinstall": "npm run build",

    "lint": "npm run lint:jscs && npm run lint:eslint && npm run lint:sass",
    "lint:jscs": "cat ./{src,test}/**/*.{js,jsx} | jscs",
    "lint:eslint": "eslint --ext=\".js\" --ext=\".jsx\" src/",
    "lint:sass": "scss-lint src/",
    "postlint": "npm run clean:tmp",

    "test": "karma start --singleRun",
    "test:watch": "karma start",

    "dev": "npm run dev:open && npm run dev:serve",
    "dev:serve": "webpack-dev-server --devtool eval --progress --colors --content-base docs/",
    "dev:open": "opener http://localhost:8080",

    "predoc": "npm run clean:dist",
    "doc": "npm run doc:build",
    "doc:build": "webpack --config webpack.doc.config.js",
    "postdoc": "cp -r docs/ ."
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:scm-spain/sui-card.git"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "react": "^0.13.3",
    "classnames": "^2.1.2"
  },
  "devDependencies": {
    "@schibstedspain/frontend-pre-commit-rules": "latest",
    "babel": "^5.5.6",
    "babel-eslint": "~3.1.14",
    "babel-jscs": "^1.0.1",
    "babel-loader": "^5.1.4",
    "css-loader": "^0.14.5",
    "csslint": "^0.10.0",
    "eslint": "~0.23.0",
    "eslint-plugin-react": "~2.5.0",
    "expect": "^1.6.0",
    "jscs": "~1.13.1",
    "karma": "^0.12.33",
    "karma-chrome-launcher": "^0.1.12",
    "karma-cli": "0.0.4",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-spec-reporter": "0.0.19",
    "karma-webpack": "^1.5.1",
    "lodash": "~3.9.3",
    "mocha": "^2.2.5",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.1.2",
    "opener": "^1.4.1",
    "phantomjs-polyfill": "0.0.1",
    "react-hot-loader": "^1.2.7",
    "rimraf": "^2.4.0",
    "sass-loader": "^1.0.2",
    "style-loader": "^0.12.3",
    "webpack": "^1.9.11",
    "webpack-dev-server": "^1.9.0"
  }
}
