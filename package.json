{
  "name": "@schibstedspain/sui-card",
  "version": "3.0.1",
  "main": "dist/",
  "scripts": {
    "clean:dist": "rm -rf ./dist/*",

    "prebuild": "npm run clean:dist -s",
    "build": "npm run build:scripts && npm run build:styles",
    "build:scripts": "babel src --out-dir dist",
    "build:styles": "node-sass src/index.scss dist/sui-card.css --importer ./scripts/importer.js",
    "postbuild:styles": "cp dist/sui-card.css dist/_sui-card.scss",
    "postinstall": "npm run build",

    "lint": "npm run lint:eslint && npm run lint:sass",
    "lint:eslint": "eslint --ext=\".js\" --ext=\".jsx\" src/",
    "lint:sass": "scss-lint src/",

    "test": "mocha --compilers js:babel/register --recursive",
    "test:watch": "npm run test -- -w test src --watch-extensions jsx",

    "dev": "npm run dev:open && npm run dev:serve",
    "dev:serve": "webpack-dev-server --devtool eval --progress --colors --content-base docs/",
    "dev:open": "opener http://localhost:8080",

    "predoc": "webpack --config webpack.doc.config.js",
    "doc": "npm run doc:build",
    "doc:build": "gh-pages -d docs"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:SUI-Components/sui-card.git"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "react": "^0.13.3",
    "classnames": "^2.1.2",
    "@schibstedspain/theme-basic": "latest"
  },
  "devDependencies": {
    "@schibstedspain/frontend-pre-commit-rules": "latest",
    "babel": "^5.5.6",
    "babel-eslint": "~3.1.14",
    "babel-jscs": "^1.0.1",
    "babel-loader": "^5.1.4",
    "css-loader": "^0.14.5",
    "eslint": "~0.23.0",
    "eslint-plugin-react": "~2.5.0",
    "expect": "^1.6.0",
    "gh-pages": "^0.3.1",
    "lodash": "~3.9.3",
    "mocha": "^2.2.5",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.1.2",
    "opener": "^1.4.1",
    "react-hot-loader": "^1.2.7",
    "sass-loader": "^1.0.2",
    "style-loader": "^0.12.3",
    "webpack": "^1.9.11",
    "webpack-dev-server": "^1.9.0"
  }
}
